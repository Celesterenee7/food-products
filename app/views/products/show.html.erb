<div class="row col-md-12 top">
<h1><%= @product.name %></h1>
</div>
<div class="row">


<div class="col-md-6">

<h3>Rating: <%= @product.rating %></h3>
<h4>Here are the reviews for this product:</h4>
<% if @product.reviews.any? %>
<% @product.reviews.sort_name.each do |review| %>
<ul>
  <li>
    <%= link_to review.name, product_review_path(@product, review) %>
  </li>
</ul>
<% end %>
<% else %>
<p>No reviews are listed for this product.</p>
<% end %>


<p class="btn btn-info"><%= link_to "Add a review", new_product_review_path(@product) %></p>

</div>
<div class="col-md-6 right">

<% if @product.cost != nil %>
<h3>costs:</h3>

<p><%= @product.cost %></p>

<% else %>
<h4>There are no costs listed for this product yet!</h4>

<% end %>
</div>

<div class="col-md-6 right">

<% if @product.country_of_origin != nil %>
<h3>costs:</h3>

<p><%= @product.country_of_origin %></p>

<% else %>
<h4>There are no origins listed for this product yet!</h4>

<% end %>
</div>
</div>
<hr>
<p><%= link_to "Edit", edit_product_path(@product) %> |
  <%= link_to "Delete product", product_path(@product),
  :data => {:confirm => "Are you sure?",
  :method => "delete"} %> |
  <%= link_to "Return to products", products_path %></p>